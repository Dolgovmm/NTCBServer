<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.HBox?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.dolgov.ntcbserver.main.MainController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <top>
            <HBox fx:id="hbox">
               <Button onAction="#onStartButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" text="Start" BorderPane.alignment="CENTER"/>
               <Button onAction="#onStopButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" text="Stop" BorderPane.alignment="CENTER"/>
            </HBox>
         </top>
         <center>
            <TextArea fx:id="textArea"  wrapText="true" editable="false" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </center></BorderPane>
   </children>
</AnchorPane>
